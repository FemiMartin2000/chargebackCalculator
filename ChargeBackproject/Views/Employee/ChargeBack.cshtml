@model IEnumerable<ChargeBackproject.Models.ComplaintDetail>

@{
    ViewBag.Title = "ChargeBack";
}
<div class="jumbotron">
    <h2>Chargeback Details</h2> <hr />
    <table class="table table-hover table-bordered text-center" style="overflow-y: scroll; align-content: center; border: 4px solid #1f9ec052;">
        <tr style="font-size: 18px;">
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankAccountNumber)
            </th>
            <th style="width: 140px;">
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th style="width: 184px;">
                @Html.DisplayNameFor(model => model.DateOfTransaction)
            </th>
            <th style="width: 170px;text-align: center;">Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="font-size: 18px;">
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BankAccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfTransaction)
                </td>
                <td>
                    @Html.ActionLink("Agree", "Approve", new { id = item.Id }, new { @class = "btn btn-success", @style = "color: #333333; font-size: 16px;margin-left: 0px;color: white;" }) 
                    @Html.ActionLink("Reject", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @style = "color: #333333; font-size: 16px;color: white;" })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Back to List", "Index", new { }, new { @style = "color: #333333; margin-left: 10px;font-size: 20px;" })

</div>