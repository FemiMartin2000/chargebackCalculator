@model IEnumerable<ChargeBackproject.Models.TransactionDetail>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<div class="jumbotron">
    <h2 style="color: black; font-size: 32px; margin-left: 361px;">My transactions</h2><br />
    <table class="table table-hover table-bordered text-center" style="overflow-y: scroll; align-content: center; border: 4px solid #1f9ec052;">
        <tr style="font-size: 18px;">
            <th>
                @Html.DisplayNameFor(model => model.Debit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LateFee)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="font-size: 18px;">
                <td>
                    @Html.DisplayFor(modelItem => item.Debit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LateFee)
                </td>
                <td>
                    @if (((DateTime.Today) - (Convert.ToDateTime(item.PaymentDate))).TotalDays <= 15)
                    {
                        @Html.ActionLink("Lodge complaint", "RegisterComplaint", new { id = item.Id }, new { @class= "btn btn-outline-success", @style = "color: black; margin-left: 10px;font-size: 17px;" })

                    }
                </td>
            </tr>
        }
    </table>
</div>