@model ChargeBackproject.Models.LoginDetails
@{
    ViewBag.Title = "Login";
}




<div class="jumbotron">
    <h2 class="loginheading" style="color: black;font-size:40px;font-family: 'Times New Roman';">Login</h2>
    @using (Html.BeginForm("Login", "Account"))
    {
        @Html.AntiForgeryToken()
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.UserName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
        </div><br />
        <input type="submit" value="Login" class="loginbutton" />
        <br/>
        <div class="row">
            <a style="color: black;font-size: 20px;margin-left: 12px;font-family: sans-serif;" href="/Account/Register">Register as a New User</a>
        </div>
    }


</div>