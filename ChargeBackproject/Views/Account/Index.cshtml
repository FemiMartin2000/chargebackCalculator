
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">

    @if (Request.IsAuthenticated)
    {
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <p style="font-size: 40px;font-family: sans-serif;margin-left: 322px;">
            <span>Welcome @Html.Encode(User.Identity.Name)</span>
        </p>
    }
    
</div>