@model ChargeBackproject.Models.Role
@{
    ViewBag.Title = "Role Selection";
}

<div class="jumbotron">
    <h1 style="font-size:50px; font-family:'Times New Roman', Times, serif; font-style: normal; text-align: center;">Welcome to ABC Bank</h1>
    <br />
    @using (Html.BeginForm("RoleChoice", "Account", FormMethod.Post))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row" style="margin-right: -175px;">
            <div class="col-sm-4">
                <img src="~/Content/images/admin.png" width="200" height="150" />
                <br>
                @Html.RadioButtonFor(i => i.RoleName, value: "Admin") Admin <br />
            </div>
            <div class="col-sm-4">
                <img src="~/Content/images/customer.jpg" width="200" height="150" />
                <br>
                @Html.RadioButtonFor(i => i.RoleName, value: "Customer") Customer <br />
            </div>
            <div class="col-sm-4">
                <img src="~/Content/images/employee.jpg" width="200" height="150" />
                <br>
                @Html.RadioButtonFor(i => i.RoleName, value: "Employee") Employee <br />
            </div>
        </div>
        <div class="row">
            <br />
            <br />
            <div style="text-align: center;">
                <input style="margin-left: -12px;" type="submit" class="btn btn-success" value="Continue" />
            </div>
        </div>
        <div class="row">
            <br />
            <!--Show details are saved successfully message-->
            <div class="col-lg-12" style="margin-left: 405px; color: red;">@ViewBag.Message</div>
        </div><br />
    }

</div>

