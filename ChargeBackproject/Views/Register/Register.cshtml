
@{
    ViewBag.Title = "Register";
}
<h2 style="font-family: sans-serif;font-display: block;color: white;">Register</h2>
<div class="jumbotron">
    <form>
        <div class="container">
            <h1 style="font-size:40px; font-family:'Times New Roman', Times, serif; font-style: normal;">Register</h1>
            <p>Please fill in this form to create an account.</p>

            <label for="firstname"><b>First Name</b></label>
            <input type="text" placeholder="Enter first name" name="firstname" id="firstname" required>
            <br>

            <label for="lastname"><b>Last Name</b></label>
            <input type="text" placeholder="Enter last name" name="lastname" id="lastname" required>
            <br>

            <label for="dob"><b>Date of Birth</b></label>
            <input type="date" placeholder="Enter DOB" name="dob" id="dob" required>
            <br>
            <br>

            <label><b>Gender</b></label>
            <input type="radio" name="dob" id="dob" value="Male">Male
            <input type="radio" name="dob" id="dob" value="Female">Female
            <br>
            <br>


            <label for="mobno"><b>Contact Number</b></label>
            <input type="number" placeholder="contact number" name="mobno" id="mobno" required>
            <br>

            <label for="address"><b>Address</b></label>
            <input type="text" placeholder="Enter the address" name="address" id="address" maxlength="200" required>
            <br>

            <label for="city"><b>City</b></label>
            <input type="text" placeholder="Enter the city" name="city" id="city" required>
            <br>

            <label for="state"><b>State</b></label>
            <input type="text" placeholder="Enter the state" name="state" id="state" required>
            <br>

            <label for="UserId"><b>Enter the User Id</b></label>
            <input type="text" placeholder="Enter the User Id" name="UserId" id="UserId" required>
            <br>

            <label for="pass"><b>Enter the Password</b></label>
            <input type="password" placeholder="Enter the password" name="pass" id="pass" required>
            <br>

            <label><b>User Category</b></label>
            <input type="radio" class="tab-content" name="user" id="user" value="Customer" /><span>Customer</span>
            <input type="radio" name="user" id="user" value="Admin" /><span>Admin</span>
            <input type="radio" name="user" id="user" value="Employee" /><span>Employee</span>
            <br>
            <br>

            <p>By creating an account you agree to our <a style="font-size:23px; color: black; font-style:normal;" href="#">Terms & Privacy</a>.</p>
            <button type="submit" class="registerbtn">Register</button>
        </div>
    </form>
</div>